datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Post {
  id       String   @id @default(uuid())
  title    String
  anchor   String?
  body     String
  postedAt DateTime @default(now())
}

model Contact {
  id      String @id @default(uuid())
  name    String
  email   String
  message String
}
